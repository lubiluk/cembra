<?xml version="1.0"?>
<launch>
  <env name="GAZEBO_MODEL_PATH" value="$(find cembra)/models"/>

  <arg name="environment" default="false"/>
  <arg name="learner" default="false"/>

  <arg name="robot_name" default="$(optenv ROBOT_NAME hsrb)" />
  <include file="$(find hsrb_gazebo_bringup)/launch/hsrb_empty_world.launch" pass_all_args="true" >
    <arg name="world_name" value="$(find cembra)/worlds/environment_3.world" />
    <!-- <arg name="robot_pos" value="[Initial pose of the robot]" /> -->
    <arg name="use_laser_odom" value="false" />
  </include>

  <node name="environment" pkg="cembra" type="environment_3.py" if="$(arg environment)"></node>
  <node name="learner" pkg="cembra" type="learner_3_ddpg.py" if="$(arg learner)"></node>
</launch>